<div class="container">
  <div class="search-box">
    <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword %>
      <%= button_tag type: "submit", class: "search-btn" do %>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
  </div>
  <div class="form-title">
    <h3><span>投稿一覧</span></h3>
  </div>
  <div class="posts">
    <div class="post-wrapper">
      <% if @posts.exists? %>
        <% @posts.each do |post| %>
          <div class="post">
            <%= link_to post_path(post), class: "post-link" do %>
              <div class="post-content">
                <div class="post-left">
                  <div class="user-icon">
                    <% if post.user.image.attached? %>
                      <%= image_tag post.user.image, class: "user-icon about-post" %>
                    <% else %>
                      <%= image_tag  'default.png', class: "user-icon about-post"%>
                    <% end %>
                  </div>
                  <div class="user-info">
                    <div class="name">
                      <%= post.user.name %>
                    </div>
                    <div class="review">
                      <div class="star-rating-front" style="width: <%= post.user.avg_score*20 %>% ">
                        ★★★★★
                      </div>
                      <div class="star-rating-back" >
                        ★★★★★
                      </div>
                      <div class="count">
                        (<%= post.user.reviews.count %>件のレビュー)
                      </div>
                    </div>
                  </div>
                </div>
                <div class="post-right">
                  <div class="title">
                    <div class="title-content">
                      <%= post.title %>
                    </div>
                  </div>
                  <div class="content">
                    <div class="tags_list">
                      <% if post.tags.present? %>
                        <% post.tags.each do |tag| %>
                          <div class="tag">
                            #<%= tag.name %>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="content__middle">
                      <div class="sports">
                        競技名: <%= post.sports %>
                      </div>
                      <div class="center">
                        <div class="datetime">
                          日時: <%= post.datetime %>
                        </div>
                        <div class="cost">
                          参加費: <%= post.cost %>
                        </div>
                      </div>
                    </div>
                    <div class="address">
                      場所: <%= post.address %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="empty">
          <div class="text">
            投稿はありません
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @posts %>
</div>