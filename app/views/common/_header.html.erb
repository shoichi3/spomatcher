<%# サインインしているときのヘッダー %>
<% if user_signed_in? %>
  <header class="navbar navbar-expand-lg navbar-light be-light fixed-top p-2" style="background-color:#ffff66;box-shadow: 0 0 3px gray;;">
    <div class="container-fluid" style="margin:0 155px; padding:0;">
      <%= link_to root_path, class: "navbar-brand", style: "font-family: 'Roboto Slab', serif; font-size: 30px;" do %>
        <%= image_tag '0116.png', width: '50', height: '50'%>
        <span>Spomatcher</span>
      <% end %>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav align-items-center">
          <li class="nav-item">
            <%= link_to root_path do %>
              <i class="fas fa-search"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_post_path do %>
              <i class="far fa-edit"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to rooms_path do %>
              <i class="far fa-envelope"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to notifications_path do %>
              <% if unchecked_notifications.any? %>
                <span class="fa-stack">
                  <i class="far fa-bell fa-stack-2x"></i>
                  <i class="fas fa-circle fa-stack-1x n-circle"></i>
                </span>
              <% else %>
                <i class="far fa-bell"></i>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item" id="icon">
            <% if @user.image.attached? %>
              <%= image_tag @user.image, class: "user-image" %>
            <% else %>
              <%= image_tag 'default.png', class: "user-image" %>
            <% end %>
          </li>
        </ul>
      </div>
      <ul class="menu hidden" id="pull-down">
        <li class="menu__content">
          <%= link_to user_path(current_user.id), class: "pull-down-list" do %>
            <i class="fas fa-user"></i>
            マイページ
          <% end %>
        <li class="menu__content">
          <%= link_to edit_user_registration_path, class: "pull-down-list" do %>
            <i class="fas fa-user-edit"></i>
            アカウント編集
          <% end %>
        <li class="menu__content">
          <%= link_to destroy_user_session_path, class: "pull-down-list", method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>
            ログアウト
          <% end %>
        </li>
      </ul>
    </div>
  </header>
<%# サインインしていないときのヘッダー %>
<% else %>
  <header class="navbar navbar-expand-lg navbar-light be-light fixed-top p-2" style="background-color:#ffff66;box-shadow: 0 0 3px gray;">
    <div class="container-fluid" style="margin:0 155px; padding:0;">
      <%= link_to root_path, class: "navbar-brand", style: "font-family: 'Roboto Slab', serif; font-size: 30px;" do %>
        <%= image_tag '0116.png', width: '50', height: '50'%>
        <span>Spomatcher</span>
      <% end %>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav align-items-center">
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link text-dark font-weight-bold" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "nav-link text-dark font-weight-bold" %>
          </li>
          <li class="nav-item">
            <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "nav-link text-dark font-weight-bold", method: :post %>
          </li>
        </ul>
      </div>
    </div>
  </header>
<% end %>